<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/default_elevation"
    android:orientation="vertical">

    <com.google.android.material.chip.Chip
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:minHeight="0dp"
        android:layout_marginTop="4dp"
        app:chipBackgroundColor="?attr/paleColor"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/choose_trainers_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:text="@string/text_choose_trainer"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:background="@drawable/background_with_underline"/>

    <TextView
        android:id="@+id/cards_trainer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/ripple_trainers_text"
        android:text="@string/text_cards_trainer"
        android:textSize="18sp"
        android:contentDescription="@string/cards_trainer_icon"
        android:drawablePadding="32dp"
        app:drawableLeftCompat="@drawable/ic_copy"
        app:drawableTint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/writer_trainer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/ripple_trainers_text"
        android:text="@string/text_writing_trainer"
        android:textSize="18sp"
        android:contentDescription="@string/icon_writing_trainer_desc"
        android:drawablePadding="32dp"
        app:drawableLeftCompat="@drawable/ic_edit"
        app:drawableTint="?attr/colorPrimary" />
</LinearLayout>
